{
  "rules": {
    "drafts": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "users": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "watchlists": {
      "$draft": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "trades": {
      "$draft": {
        "$trade": {
          ".write": "root.child('drafts').child($draft).child('teams').child(auth.uid).exists()",
          ".read": "data.child('receivingTeam').val() === auth.uid || data.child('givingTeam').val() === auth.uid",
        }
      }
    },
    "tradesUsersPivot": {
      "$draft": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "!data.exists() && $uid === auth.uid ||
            !data.exists() && root.child('trades').child($draft).child(data.child('id').val()).child('givingTeam').val() === auth.uid"
        }
      }
    },
    "tradesAccepted": {
      ".read": true,
      "$draft": {
        "$trade": {
          ".write": "root.child('drafts').child($draft).child('teams').child(auth.uid).exists() && !data.exists()",
        }
      }
    }
  }
}
